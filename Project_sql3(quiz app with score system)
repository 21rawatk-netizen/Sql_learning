    display: block;
    margin: 10px 0;
    padding: 8px;
    background: #f4f4f4;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.2s;
}

.option:hover {
    background: #dbeafe;
}

button {
    margin-top: 15px;
    padding: 8px 12px;
    border: none;
    border-radius: 5px;
    background: #4e73df;
    color: white;
    cursor: pointer;
}

