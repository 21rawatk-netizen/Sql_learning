<body>

<div class="quiz-container">
    <h2 id="question">Question</h2>
    <div id="options"></div>
    <button onclick="nextQuestion()">Next</button>
    <div class="result" id="result"></div>
</div>

<script>
const quizData = [
    {
        question: "Which language is used for web structure?",
        options: ["CSS", "HTML", "Python", "C++"],
        correct: "HTML"
    },
    {
        question: "Which is used for styling?",
        options: ["Java", "CSS", "NodeJS", "SQL"],
        correct: "CSS"
    },
    {
        question: "Which is used for interactivity?",
        options: ["HTML", "CSS", "JavaScript", "Photoshop"],
        correct: "JavaScript"
    }
];

let currentQuestion = 0;
let score = 0;
let selectedOption = null;

const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const resultEl = document.getElementById("result");

function loadQuestion() {
    selectedOption = null;
    const data = quizData[currentQuestion];
    questionEl.textContent = data.question;
    optionsEl.innerHTML = "";

    data.options.forEach(option => {
        const div = document.createElement("div");
        div.textContent = option;
        div.classList.add("option");

        div.onclick = function() {
            document.querySelectorAll(".option").forEach(opt => 
                opt.style.background = "#f4f4f4"
            );
            div.style.background = "#a5f3fc";
            selectedOption = option;
        };

        optionsEl.appendChild(div);
    });
}

function nextQuestion() {
    if(selectedOption === null) {
        alert("Please select an option!");
        return;
    }

    if(selectedOption === quizData[currentQuestion].correct) {
        score++;
    }

    currentQuestion++;

    if(currentQuestion < quizData.length) {
        loadQuestion();
    } else {
        questionEl.textContent = "Quiz Completed!";
        optionsEl.innerHTML = "";
        resultEl.textContent = "Your Score: " + score + " / " + quizData.length;
    }
}

loadQuestion();
</script>

</body>
</html>
